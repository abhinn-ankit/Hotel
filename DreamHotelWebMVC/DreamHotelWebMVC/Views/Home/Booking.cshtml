@model DreamHotelWebMVC.Models.BookingReservation
@inject DreamHotelWebMVC.Models.Services.FormattingService FormattingService

<div>
    
    <div class="container">
        <div class="row">
            <fieldset>

                <form asp-action="Booking" asp-controller="Home">
        
                    <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>
        
                    <p>
                        <label asp-for="CheckIn"></label>
                        <input asp-for="CheckIn" type="date" class="form-control checkin-date"  min="@FormattingService.AsReadableDate(DateTime.Now)"/>
                    </p>
                    
                    <p>
                        <label asp-for="CheckOut"></label>
                        <input asp-for="CheckOut" type="date" class="form-control checkout-date" min="@FormattingService.AsReadableDate(DateTime.Now)"/>
                    </p>

                </form>

            </fieldset>
        </div>
    </div>

</div>
