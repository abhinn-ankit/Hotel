@model DreamHotelWebMVC.Models.BookingReservation
@inject DreamHotelWebMVC.Models.Services.FormattingService FormattingService

<div>
    
    <div class="container">
        <div class="row">
            <fieldset>

                <form asp-action="Booking" asp-controller="Home">
        
                    <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>
                    
                        <div class='col-md-5'>
                            <div class="form-group">
                                <label>Check-In Date</label>
                                <div class='input-group date' id='datetimepicker6'>
                                    <input type='text' class="form-control" asp-for="CheckIn"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-5'>
                            <div class="form-group">
                                <label>Check-Out Date</label>
                                <div class='input-group date' id='datetimepicker7'>
                                    <input asp-for="CheckOut" type="text" class="form-control"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    
                </form>

            </fieldset>
        </div>
    </div>

</div>
