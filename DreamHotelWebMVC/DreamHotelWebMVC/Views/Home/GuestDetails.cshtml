@model List<DreamHotelWebMVC.Models.Person>

@{
    Layout = "_Layout";
}

<div class="guest-details">

    <div class="container">
        <h2 class="font-white mt-70 text-align-center">Enter details of the guest below</h2>
        <div class="col-sm-12 mt-20">
            <h3 class="font-white col-sm-offset-1">Total price: @ViewBag.Price</h3>
        </div>
        
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <form asp-action="GuestDetails" asp-controller="Home" method="post">

                    @for (var i = 0; i < Model.Count();i++) 
                    {
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model[i].FirstName" class="font-white"></label>
                                <input asp-for="@Model[i].FirstName" type="text" class="form-group" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model[i].LastName" class="font-white"></label>
                                <input asp-for="@Model[i].LastName" type="text" class="form-group" />
                            </div>
                        </div>
                    }
                    
                    <div class="col-sm-12">
                        <p class="mt-20">
                            <button type="submit" class="btn btn-primary">Confirm</button>
                        </p>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>

</div>
