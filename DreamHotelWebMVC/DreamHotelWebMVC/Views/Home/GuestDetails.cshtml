@model DreamHotelWebMVC.Models.Person

@{
    Layout = "_Layout";
}

<div class="guest-details">

    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <form asp-action="GuestDetails" asp-controller="Home">

                    @foreach (var guest in ViewBag.guests)
                    {
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="font-white"></label>
                                <input asp-for="FirstName" type="text" class="form-group" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="font-white"></label>
                                <input asp-for="LastName" type="text" class="form-group" />
                            </div>
                        </div>
                    }

                </form>
            </div>
        </div>
    </div>

</div>
